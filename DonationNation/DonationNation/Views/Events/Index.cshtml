@model IEnumerable<Event>

@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <h1>My Events</h1>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Event</th>
                <th scope="col">Last</th>
                <th scope="col">Location</th>
                <th scope="col">Date/Time</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.Id</th>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>@item.Location</td>
                    <td>@item.DateTime.ToShortDateString() on @item.DateTime.ToShortTimeString()</td>
                </tr>
            }
        </tbody>
    </table>
</div>
