@model IEnumerable<UsersViewModel>

@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <h1>Users</h1>
    <p>
        <a asp-action="Create">Create New User</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Full Name</th>
                <th scope="col">Email</th>
                <th scope="col">Role</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th>@item.FullName</th>
                    <td>@item.Email</td>
                    <td>@item.Role</td>
                </tr>
            }
        </tbody>
    </table>
</div>

